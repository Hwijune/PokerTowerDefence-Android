<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stagechoice">

    <TextView
        android:id="@+id/text"
        android:layout_width="800px"
        android:layout_height="220px"
        android:textSize="110px"
        android:textColor="#FFFFFF"
        android:text="SELECT STAGE"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <ImageButton
        android:layout_toLeftOf="@id/text"
        android:layout_centerVertical="true"
        android:id="@+id/stage1"
        android:layout_width="443px"
        android:layout_height="630px"
        android:background="@drawable/c1"/>

    <ImageButton
        android:layout_toRightOf="@id/text"
        android:layout_centerVertical="true"
        android:id="@+id/stage2"
        android:paddingLeft="50pt"
        android:layout_width="443px"
        android:layout_height="630px"
        android:background="@drawable/c14"/>

    <ImageButton
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/stage3"
        android:layout_width="443px"
        android:layout_height="630px"
        android:background="@drawable/c40"/>


</RelativeLayout>